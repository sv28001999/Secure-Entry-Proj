<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".VerifyOtpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/voilet_700"
        android:orientation="horizontal"
        android:paddingStart="25dp"
        android:paddingTop="25dp"
        android:paddingBottom="20dp">

        <ImageButton
            android:id="@+id/emailVerificationBackBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_shape_white_bg"
            android:src="@drawable/back_arrow_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Email Verification"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="23sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Get Your Code"
            android:textAlignment="center"
            android:textColor="@color/voilet_700"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Please enter the 4 digit code that send to your email address."
            android:textAlignment="center"
            android:textColor="#777777"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etOtpDigit1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/gray_border_bg"
                android:fontFamily="@font/poppins_bold"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="@color/gray_200"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etOtpDigit2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/gray_border_bg"
                android:fontFamily="@font/poppins_bold"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="@color/gray_200"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etOtpDigit3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/gray_border_bg"
                android:fontFamily="@font/poppins_bold"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="@color/gray_200"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etOtpDigit4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/gray_border_bg"
                android:fontFamily="@font/poppins_bold"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="@color/gray_200"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="If you don't receive code!"
                android:textColor="@color/gray_700"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvResendOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Resend"
                android:textColor="@color/voilet_500"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/verifyOtpBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/voilet_bg_curve"
            android:fontFamily="@font/poppins_medium"
            android:padding="5dp"
            android:text="Verify and Process"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>