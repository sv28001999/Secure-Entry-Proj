<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AddEntriesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/voilet_700"
            android:orientation="horizontal"
            android:paddingStart="25dp"
            android:paddingTop="25dp"
            android:paddingBottom="20dp">

            <ImageButton
                android:id="@+id/addEntryBackBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/round_shape_white_bg"
                android:src="@drawable/back_arrow_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Add Entry"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="23sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/personImg"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/empty_img" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toEndOf="@+id/personImg"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/buttonSelectImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/round_shape_voilet_bg"
                    android:padding="11dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/upload_img" />

                <ImageButton
                    android:id="@+id/buttonCaptureImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/round_shape_voilet_bg"
                    android:padding="11dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/camera_img" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="Person Name"
                    android:textColor="#777777"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/gray_border_bg"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:hint="e.g. XYZ"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_500"
                    android:textColorHint="@color/gray_700"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="Mobile No."
                    android:textColor="#777777"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etPersonMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/gray_border_bg"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:hint="e.g. 9876543210"
                    android:inputType="number"
                    android:maxLength="12"
                    android:padding="10dp"
                    android:textColor="@color/gray_500"
                    android:textColorHint="@color/gray_700"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="Place"
                    android:textColor="#777777"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etPersonPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/gray_border_bg"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:hint="e.g. Dahisar"
                    android:inputType="text"
                    android:maxLength="100"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_500"
                    android:textColorHint="@color/gray_700"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="Work"
                    android:textColor="#777777"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etPersonWork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/gray_border_bg"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:hint="e.g. Carpenter"
                    android:inputType="text"
                    android:maxLength="50"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_500"
                    android:textColorHint="@color/gray_700"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="Wing/Room No."
                    android:textColor="#777777"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etPersonVisitingInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/gray_border_bg"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:hint="e.g. A-302"
                    android:inputType="text"
                    android:maxLength="50"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_500"
                    android:textColorHint="@color/gray_700"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/personEntrySubmitBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/voilet_bg_curve"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="5dp"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>